  	<script src="/js/app.js"></script>
  	<script>
  		var attendees = <%- JSON.stringify(attendees) %>
  	</script>
  </head>
  <body>
  <input type="text" name="name">
  <% _.each(attendees, function(rsvp, name) { %>
  <div class="media member">
    <a class="pull-left">
      <img class="media-object"
           src="<%= thumb(rsvp) %>">
    </a>
    <div class="media-body">
      <a href="?member_id=<%= rsvp.member.member_id %>">
      <h4 class="media-heading name"><%= rsvp.member.name %></h4>
    </a>
    </div>
  </div>
  <% }); %>

